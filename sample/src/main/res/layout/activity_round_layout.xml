<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RoundLayoutActivity">


    <com.onegold.glbutton.ui.view.layout.GlRoundLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:gl_backgroundColor="@color/light_blue_400"
        app:gl_glowColor="@color/material_dynamic_secondary10"
        app:gl_glowWidth="10dp"
        app:gl_gradientColor="@color/purple_700"
        app:gl_strokeColor="@color/material_dynamic_neutral0"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.5">

    </com.onegold.glbutton.ui.view.layout.GlRoundLayout>

</androidx.constraintlayout.widget.ConstraintLayout>